.page-container {
  height:100%;
  display: flex;
  flex-direction: column;
  padding:40rpx 35rpx;
}

.todo-title {
  font-size: 14px;
  color:#b4b5b4;
}

.addBox {
  margin-bottom: 20rpx;
}

.todo-input {
  margin:20rpx 0;
  padding:15rpx;
  border:1px solid #333;
}

.todo-list {
  display: flex;
  flex-direction: column;
  gap:15rpx;
}

.todo-item {
  padding:15rpx;
  background-color: #f5f5f5;
}

.todo-content {
  font-size: 16px;
  font-weight: 700;
}

.todo-time {
  margin-left:15rpx;
  font-size:14px;
  color:#999;
}

